<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.extension" value="action,,do,go"></constant>
    <constant name="struts.convention.action.packages" value="com.lxp.ssh2.web.action" />
    
    <!-- 设置result的扫描路径 -->
    <constant name="struts.convention.result.path" value="/WEB-INF/views/"/>
	
	<package name="ssh2-default" extends="convention-default,json-default" namespace="/"></package>
</struts>
